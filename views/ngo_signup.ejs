<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="/form_style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
</head>

<body>
    <div class="container mt-4">
        <h1>NGO SignUp</h1>
        <p class="text-center fs-5 text-decoration-underline">Please fill in the following information to SignUp as a NGO :</p>
        <form action="/ngo_signup" method="post">
            <div class="row">
                <div class="form-group col-12">
                    <label for="ngo_name" class="form-label fs-5">NGO Name:</label>
                    <input type="text" class="form-control" id="ngo_name" name="ngo_name" placeholder="Enter NGO Name:"
                        required>
                </div>
            <div class="row">
                <div class="form-group col-12">
                    <label for="ngo_email" class="form-label fs-5">Email Id:</label>
                    <input type="mail" class="form-control" id="ngo_email" name="ngo_email" placeholder="Enter NGO Mail Id"
                        required>
                </div>
                <div class="form-group col-12">
                    <label for="ngo_password" class="form-label fs-5">Password</label>
                    <div class="input-group">
                        <input type="password" required name="ngo_password" class="form-control" id="ngo_password"
                            placeholder="Enter NGO Password">
                        <span class="input-group-text">
                            <i class="fas fa-eye eye-button" id="password-eye"></i>
                        </span>
                    </div>
                </div>
            </div>
            <button type="submit" class="submit-btn">Sign Up</button>
        </form>
    </div>

    <script>
        const passwordEye = document.getElementById('password-eye');
        const passwordInput = document.getElementById('ngo_password');
        passwordEye.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordEye.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordEye.classList.remove('fa-eye-slash');
            }
        });
    </script>
</body>

</html>